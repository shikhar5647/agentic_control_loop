{
  "name": "Binary Distillation Column",
  "description": "A binary distillation column separating a mixture of benzene and toluene. The column operates at atmospheric pressure with 20 theoretical stages. Feed enters at stage 10. Top product (benzene-rich) is withdrawn as distillate, bottom product (toluene-rich) is withdrawn from reboiler.",
  "unit_operations": [
    {
      "name": "D-101",
      "type": "distillation_column",
      "description": "Main distillation column with reboiler and condenser"
    },
    {
      "name": "E-101",
      "type": "heat_exchanger",
      "description": "Reboiler"
    },
    {
      "name": "E-102",
      "type": "heat_exchanger",
      "description": "Condenser"
    }
  ],
  "controlled_variables": [
